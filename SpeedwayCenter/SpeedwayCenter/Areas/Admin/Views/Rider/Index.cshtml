@model IEnumerable<SpeedwayCenter.Areas.Admin.ViewModels.Rider.AdminIndexRiderViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminBasicLayout.cshtml";
}

<h2>Rider</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Country)</th>
            <th>@Html.DisplayNameFor(model => model.BirthDate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr data-href="@Url.Action("Edit", "Rider", new {Id = item.Id})">
                <td>@Html.DisplayFor(model => item.Name)</td>
                <td>@Html.DisplayFor(model => item.Country)</td>
                <td>@Html.DisplayFor(model => item.BirthDate)</td>
                <td>
                    @using (Html.BeginForm("Delete", "Rider", FormMethod.Post))
                    {
                        @Html.Hidden("id", item.Id)
                        <button type="submit" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span></button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-success" href="@Url.Action("Add", "Rider")">Add</a>

<script>
    $('tr[data-href]').click(function () {
        window.location.href = $(this).data('href');
    });
</script>