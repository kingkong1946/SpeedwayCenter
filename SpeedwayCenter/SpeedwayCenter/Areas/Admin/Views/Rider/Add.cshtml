@using System.Web.Mvc.Html
@model SpeedwayCenter.Areas.Admin.ViewModels.Rider.AdminAddRiderViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminBasicLayout.cshtml";
}
<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
    <h2>Add</h2>
    @using (@Html.BeginForm("Add", "Rider", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-sm-4 col-md-3" })
            <div class="col-sm-8 col-md-9">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Forname, new { @class = "control-label col-sm-4  col-md-3" })
            <div class="col-sm-8 col-md-9">
                @Html.TextBoxFor(model => model.Forname, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BirthDate, new { @class = "control-label col-sm-4  col-md-3" })
            <div class="col-sm-8 col-md-9">
                @Html.TextBoxFor(model => model.BirthDate, new { @class = "form-control datepicker" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Country, new { @class = "control-label col-sm-4  col-md-3" })
            <div class="col-sm-8 col-md-9">
                @Html.TextBoxFor(model => model.Country, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TeamId, new { @class = "control-label col-sm-4 col-md-3" })
            <div class="col-sm-8 col-md-9">
                @Html.DropDownListFor(model => model.TeamId, new SelectList(Model.Teams, "Id", "Name"), new { @class = "form-control" })
            </div>
        </div>
        <input type="submit" class="btn btn-default" value="Add" />
    }
</div>
<script type="text/javascript">
    $(function () {
        $(".datepicker").datepicker({
            startDate: '-100y',
            orientation: 'bottom'
        });
    });
</script>
