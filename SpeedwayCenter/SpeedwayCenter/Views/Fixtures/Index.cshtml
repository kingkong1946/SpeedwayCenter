@model SpeedwayCenter.ViewModels.Fixture.FixtureViewModel

@{
    ViewBag.Title = "Index";
}

<h3>Index</h3>

<table class="table table-hover table-striped table-condensed">
    <thead>
        <tr>
            <th hidden></th>
            <th hidden></th>
            <th hidden></th>
        </tr>
    </thead>
    @for (int i = 0; i < @Model.RoundsCount; i++)
    {
        <thead>
            <tr>
                <th colspan="3">Round @(i+1)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Meetings)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Score)</td>
                </tr>
            }
        </tbody>
    }
</table>