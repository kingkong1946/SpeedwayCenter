                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li class="@rider hidden-sm"><a href="@Url.Action("Index", "Rider")">Riders</a></li>
                        <li class="@teams hidden-sm"><a href="@Url.Action("Index", "Team")">Teams</a></li>
                        <li class="@fixtures hidden-sm"><a href="@Url.Action("Index", "Fixtures")">Fixtures</a></li>
