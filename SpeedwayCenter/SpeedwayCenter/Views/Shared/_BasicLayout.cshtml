        <section class="row">
            @RenderBody()
        </section>
        <footer class="row">
            @if ((ViewContext.RouteData.Values["controller"].ToString() == "Rider"
              || ViewContext.RouteData.Values["controller"].ToString() == "Team")
             && ViewContext.RouteData.Values["action"].ToString() == "Index")
            {
                <nav>
                    <ul class="pagination pagination-sm">
                        <li class="@(ViewBag.Page < 3 ? "disabled" : "")">
                            @if (ViewBag.Page > 2)
                            {
                                <a href="@(Url.Action("Index", new {page = ViewBag.Page - 3}))" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            }
                            else
                            {
                                <span aria-hidden="true">&laquo;</span>
                            }
                        </li>
                        @for (var i = ViewBag.Page - 2; i <= ViewBag.Page + 2; ++i)
                        {
                            if (i < 1 || i > ViewBag.NumberOfPages)
                            {
                                continue;
                            }
                            <li class="@(ViewBag.Page == i ? "active" : "")"><a href="@Url.Action("Index", new {page = i})">@i</a></li>
                        }
                        <li class="@(ViewBag.Page + 2 > ViewBag.NumberOfPages ? "disabled" : "")">
                            @if (ViewBag.Page + 2 > ViewBag.NumberOfPages)
                            {
                                <span aria-hidden="true">&raquo;</span>
                            }
                            else
                            {
                                <a href="@(Url.Action("Index", new {page = ViewBag.Page + 3}))" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            }
                        </li>
                    </ul>
                </nav>
            }
            <kbd>Copyright Łukasz Adler @DateTime.Now.Year</kbd>
        </footer>

