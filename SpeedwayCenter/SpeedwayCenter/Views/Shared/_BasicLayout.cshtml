                            || ViewContext.RouteData.Values["controller"].ToString() == "Team")
                            && ViewContext.RouteData.Values["action"].ToString() == "Index")
                        {
                            <li>
                                @using (Html.BeginForm("Index", ViewContext.RouteData.Values["controller"].ToString(), null, FormMethod.Get, new { @class = "navbar-form navbar-left" }))
