@model IEnumerable<SpeedwayCenter.ViewModels.Table.TableIndexViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="col-xs-8 col-xs-offset-2">
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>P.</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Matches)</th>
                <th>@Html.DisplayNameFor(model => model.Wins)</th>
                <th>@Html.DisplayNameFor(model => model.Draws)</th>
                <th>@Html.DisplayNameFor(model => model.Loses)</th>
                <th>@Html.DisplayNameFor(model => model.Points)</th>
                <th>@Html.DisplayNameFor(model => model.PlusMinusPoints)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in Model)
            {
                <tr>
                    <td></td>
                    <th>@team.Name)</th>
                    <th>@team.Matches)</th>
                    <th>@team.Wins)</th>
                    <th>@team.Draws)</th>
                    <th>@team.Loses)</th>
                    <th>@team.Points)</th>
                    <th>@team.PlusMinusPoints)</th>
                </tr>
            }
        </tbody>
    </table>
</div>