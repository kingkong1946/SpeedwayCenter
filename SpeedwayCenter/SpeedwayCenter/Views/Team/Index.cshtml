@model IEnumerable<SpeedwayCenter.ViewModels.Team.TeamIndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-hover table-striped table-condensed">
    <tr>
        <th>@Html.DisplayNameFor(model => model.FullName)</th>
        <th>@Html.DisplayNameFor(model => model.StadiumName)</th>
        <th>@Html.DisplayNameFor(model => model.Capacity)</th>
        @*<th></th>*@
    </tr>

    @foreach (var item in Model)
    {
        <tr class="clickable-row" data-href="@Url.Action("Details", new {id = item.Id})">
            <td>@Html.DisplayFor(model => item.FullName)</td>
            <td>@Html.DisplayFor(model => item.StadiumName)</td>
            <td>@Html.DisplayFor(model => item.Capacity)</td>
            @*<td>
                <div class="btn-block">
                    <input type="button" value="edit" onclick="location.href = '@url.action("edit", new {id = item.id})'" class="btn btn-warning btn-xs" />
                    <input type="button" value="details" onclick="location.href = '@url.action("details", new {id = item.id})'" class="btn btn-info btn-xs" />
                    <input type="button" value="delete" onclick="location.href = '@url.action("delete", new {id = item.id})'" class="btn btn-danger btn-xs" />
                </div>
            </td>*@
        </tr>
    }
</table>
<script>
    $(".clickable-row").click(function () {
        window.document.location = $(this).data("href");
    });
</script>